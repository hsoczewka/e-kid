<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <h3>You don't have access for this page</h3>
                    <MudLink Href="/identity/user/login" Color="Color.Primary">Login here</MudLink>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudContainer>
                    <MudGrid>
                        <MudItem xs="12" Style="margin-top: 20%">
                            <MudGrid Spacing="1" Justify="Justify.Center">
                                <MudItem>
                                    <MudText Typo="Typo.h4"><i>Sorry, there's nothing at this address.</i></MudText>
                                </MudItem>
                            </MudGrid>
                        </MudItem>
                    </MudGrid>
                </MudContainer>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
